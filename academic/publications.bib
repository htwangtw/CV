	keywords = {mind wandering, default model network, principal gradient, representational similarity analysis},
	pages = {9318--9323},
	file = {Full Text PDF:/home/hw1012/Zotero/storage/KBFN3RA7/Sormaz et al. - 2018 - Default mode network can support the level of deta.pdf:application/pdf;Snapshot:/home/hw1012/Zotero/storage/I9A7T3E2/9318.html:text/html}
