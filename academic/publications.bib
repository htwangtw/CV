	journal = {Cortex},
	author = {Villena-Gonzalez, Mario and Wang, Hao-ting and Sormaz, Mladen and Mollo, Giovanna and Margulies, Daniel S. and Jefferies, Elizabeth A. and Smallwood, Jonathan},
	month = feb,
	year = {2018},
	keywords = {Retrosplenial cortex, Default network, Future thinking, Scene construction},
	pages = {224--234},
	file = {Attachment:/home/hw1012/Zotero/storage/EHPT7LHK/Villena-Gonzalez et al. - 2018 - Individual variation in the propensity for prospective thought is associated with functional integratio.pdf:application/pdf}
}


@article{poerio_role_2017,
