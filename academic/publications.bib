	pages = {393--401},
	file = {Attachment:/home/hw1012/Zotero/storage/YSM8DWHT/Murphy et al. - 2018 - Distant from input Evidence of regions within the default mode network supporting perceptually-decoupled and conc.pdf:application/pdf}
}

@article{villena-gonzalez_individual_2018,
